#! /bin/bash
set -eux

docker build --network=host -t luckygeck/openresty-bundle-deb .
CONTAINER=$(docker create luckygeck/openresty-bundle-deb)
if [ ! -d ./artifacts ]; then
    mkdir ./artifacts
fi
docker cp $CONTAINER:/build/openresty_1.9.3.1-luckygeck1_amd64.deb ./artifacts/
docker rm $CONTAINER
